<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nasimuzzaman.roostpad.home.HomeActivity">



    <Button
        android:hint="Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_go_calender"
        android:text="Calender"
        />

    <TextView
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/btn_go_calender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Date"
        android:id="@+id/date"
        />

    <Button
        android:hint="Request a Holiday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/request_a_holiday"
        android:text="Request a Holiday"
        android:layout_below="@+id/date"
        />



</RelativeLayout>
