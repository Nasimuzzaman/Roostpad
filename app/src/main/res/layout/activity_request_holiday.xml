<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nasimuzzaman.roostpad.request.RequestHolidayActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:orientation="horizontal"
        android:id="@+id/dateSelect">

        <Button
            android:id="@+id/btn_from_date_go_calendar"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:drawableRight="@drawable/ic_date_range_black_24dp"
            android:text="Start date"
            android:textColor="@color/teal"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_toRightOf="@id/btn_from_date_go_calendar"
            android:text="to"/>

        <Button
            android:id="@+id/btn_to_date_go_calendar"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/btn_from_date_go_calendar"
            android:layout_toRightOf="@+id/btn_from_date_go_calendar"
            android:text="End date"
            android:drawableRight="@drawable/ic_date_range_black_24dp"
            android:textColor="@color/teal"
            android:textStyle="bold" />

    </LinearLayout>




    <!--<TextView
        android:id="@+id/fromDate"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/btn_to_date_go_calendar"
        android:text="From"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/toDate"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_to_date_go_calendar"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btn_to_date_go_calendar"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:text="To"
        android:textSize="25sp" />-->

    <TextView
        android:id="@+id/parseFromDate"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dateSelect"
        android:ems="10"
        android:gravity="center"
        android:inputType="date"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/parseToDate"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@id/dateSelect"
        android:layout_toRightOf="@id/parseFromDate"
        android:ems="10"
        android:gravity="center"
        android:inputType="date"
        android:textColor="@color/black"
        android:textSize="20dp" />


    <LinearLayout
        android:id="@+id/rviewHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parseFromDate"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="Day"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="Holiday"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="1st Half"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="2nd Half"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rview_days"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/rviewHeader"
        android:background="@drawable/border_request_days"
        android:scrollbars="vertical">


    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/tdc"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/rview_days"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_below="@+id/rview_days"
            android:layout_marginRight="5dp"
            android:text="Selected:\nIncludes\nActual\nYou will have:"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_day_count"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/rview_days"
            android:layout_marginRight="5dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>


    <EditText
        android:id="@+id/messageBox"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tdc"
        android:layout_marginTop="2dp"
        android:background="@drawable/border_request_days"
        android:ems="10"
        android:gravity="start"
        android:hint="Write message"
        android:inputType="textMultiLine"
        android:maxLength="500"
        android:scrollbars="vertical"
        android:textColorHint="@color/black"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/messageBox"
        android:text="Request"
        android:textColor="@color/teal"
        android:textStyle="bold" />

</RelativeLayout>
