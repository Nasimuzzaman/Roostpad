<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nasimuzzaman.roostpad.home.UsersActivity">

    <Button
        android:id="@+id/users"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/users_icon"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="0dp" />


    <Button
        android:id="@+id/contacts"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/users"
        android:layout_toRightOf="@+id/users"
        android:background="@drawable/contact_icon"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />


    <Button
        android:id="@+id/calendar_events"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/calendar_events_icon"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/contacts"
        android:layout_toEndOf="@+id/contacts" />

    <Button
        android:id="@+id/news"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/news_icon"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/calendar_events"
        android:layout_toEndOf="@+id/calendar_events" />

    <Button
        android:id="@+id/settings"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/settings"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/news"
        android:layout_toEndOf="@+id/news" />

    <TextView
        android:id="@+id/manage_users_text_view"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:text="Manage Users"
        android:includeFontPadding="true"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/news"
        android:layout_toStartOf="@+id/news"
        android:layout_below="@+id/users" />

    <Button
        android:id="@+id/add_new_user"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_below="@+id/manage_users_text_view"
        android:background="@color/steelblue"
        android:text="Add New User" />


</RelativeLayout>
