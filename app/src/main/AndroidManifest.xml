<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nasimuzzaman.roostpad">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".authentication.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".home.HomeActivity" />
        <activity android:name=".home.CalendarActivity" />
        <activity
            android:name=".request.RequestHolidayActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".home.DateCalendarActivity" />
        <activity android:name=".home.SetupActivity" />
        <activity android:name=".addUser.AddNewUserActivity" />
        <activity android:name=".home.UsersActivity" />
        <activity android:name=".contacts.ContactsActivity" />
        <activity android:name=".changePassword.ChangePasswordActivity" />
        <activity android:name=".pendingRequests.PendingRequestsActivity" />
        <activity android:name=".employeeNotification.UserNotificationActivity" />
        <activity android:name=".userNotificationDetails.UserNotificationDetailsActivity" />
        <activity android:name=".userNotificationDetails.UserDashboardActivity" />
        <activity android:name=".libraryPackage.BaseActivity"></activity>
    </application>

</manifest>